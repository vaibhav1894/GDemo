<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    app:cardCornerRadius="3dp"
    android:layout_marginBottom="@dimen/size_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bike"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_product_view_layout_left"
            android:layout_marginRight="@dimen/size_10">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/atta"
                android:scaleType="fitXY"/>
            <com.gdemo.customtext.CustomTextView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:text="20%"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_10"
                android:gravity="center"
                android:background="@drawable/shape_background_red_circle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/item_product_view_layout_left">

            <com.gdemo.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRESHO"
                android:textSize="@dimen/size_12"/>
            <com.gdemo.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banana - Robusta"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_12"/>
            <com.gdemo.customtext.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:text="1 kg"
                android:textSize="@dimen/size_10"
                android:background="@drawable/shape_border_grey"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_down_arrow"
                android:layout_marginRight="@dimen/size_14"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">

                    <com.gdemo.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MRP: Rs74"
                        android:textSize="@dimen/size_12"/>
                    <com.gdemo.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 59.20"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/size_12"/>

                </LinearLayout>

                <com.gdemo.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="ADD"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_12"
                    android:background="@drawable/shape_btn_re"
                    android:gravity="center"
                    android:paddingRight="@dimen/size_20"
                    android:paddingLeft="@dimen/size_20"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>